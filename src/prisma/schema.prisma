generator client {
  provider = "prisma-client-js"
  //binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  tgid        Int @id // telegram_id
  firstname   String?
  lastname    String?
  nickname    String?
  chatId      Int?
  connLimit   Int
  connections Connection[]
}

model Connection {
  key_id Int    @id @default(autoincrement())
  tgid   Int // telegram_id
  name   String // key_telegram_id

  server      String
  server_port String
  password    String
  method      String
  access_url  String
  //many-to-one
  user        User?  @relation(fields: [user_tgid], references: [tgid])
  user_tgid  Int?
}

model SceneStep {
  id Int @id @default(autoincrement())
  scene String
  nextScene String
  date  DateTime @default(now())
}