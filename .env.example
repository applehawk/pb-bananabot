# ===========================
# APPLICATION CONFIGURATION
# ===========================
NODE_ENV=development
PORT=3000
APP_NAME="AI Image Generator Bot"

# ===========================
# TELEGRAM BOT
# ===========================
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/webhook/telegram
TELEGRAM_WEBHOOK_SECRET=your_random_secret_key_here

# Bot Configuration
BOT_ADMIN_IDS=123456789,987654321

# ===========================
# GEMINI AI API
# ===========================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_MAX_RETRIES=3
GEMINI_TIMEOUT=60000

# ===========================
# DATABASE - POSTGRESQL
# ===========================
DATABASE_URL=postgresql://user:password@localhost:5432/image_gen_bot?schema=public

# ===========================
# REDIS (Optional - for sessions)
# ===========================
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# ===========================
# PAYMENT - YOOMONEY
# ===========================
YOOMONEY_TOKEN=your_yoomoney_token
YOOMONEY_SHOP_ID=your_shop_id
YOOMONEY_SECRET=your_yoomoney_secret
YOOMONEY_WALLET=your_wallet_id

# ===========================
# PAYMENT - TELEGRAM STARS
# ===========================
TELEGRAM_PAYMENTS_PROVIDER_TOKEN=your_provider_token

# ===========================
# PAYMENT - CRYPTO
# ===========================
CRYPTOBOT_API_TOKEN=your_cryptobot_token
CRYPTOBOT_WEBHOOK_SECRET=your_webhook_secret

# ===========================
# STORAGE - AWS S3
# ===========================
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret
AWS_REGION=us-east-1
AWS_S3_BUCKET=telegram-bot-images
AWS_S3_PUBLIC_URL=https://your-bucket.s3.amazonaws.com

# ===========================
# STORAGE - CLOUDFLARE R2 (Alternative)
# ===========================
# STORAGE_TYPE=r2
# R2_ACCOUNT_ID=your_account_id
# R2_ACCESS_KEY_ID=your_key
# R2_SECRET_ACCESS_KEY=your_secret
# R2_BUCKET_NAME=images
# R2_PUBLIC_URL=https://your-r2-domain.com

# ===========================
# APP CONFIGURATION
# ===========================

# Credits & Pricing
FREE_CREDITS=3
TEXT_TO_IMAGE_COST=1
IMAGE_TO_IMAGE_COST=1.5
MULTI_IMAGE_2_4_COST=2
MULTI_IMAGE_5_16_COST=3
BATCH_MULTIPLIER=1

# Referral System
REFERRAL_BONUS_NEW_USER=2
REFERRAL_BONUS_REFERRER=3
REFERRAL_FIRST_PURCHASE_BONUS=5

# Daily Bonus
DAILY_BONUS_DAY_1=0.5
DAILY_BONUS_DAY_3=1
DAILY_BONUS_DAY_7=2
DAILY_BONUS_DAY_30=5

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_GLOBAL=100

# Generation Limits
MAX_IMAGES_PER_REQUEST=16
MAX_BATCH_SIZE=4
DEFAULT_ASPECT_RATIO=1:1
GENERATION_TIMEOUT=60000

# Image Processing
MAX_IMAGE_SIZE_MB=10
IMAGE_QUALITY=90
THUMBNAIL_SIZE=300

# ===========================
# LOGGING & MONITORING
# ===========================
LOG_LEVEL=info
LOG_PRETTY=true

# Sentry (Optional)
SENTRY_DSN=your_sentry_dsn
SENTRY_ENABLED=false

# ===========================
# SECURITY
# ===========================
JWT_SECRET=your_jwt_secret_here
API_KEY=your_internal_api_key

# ===========================
# FEATURES FLAGS
# ===========================
ENABLE_MULTI_IMAGE=true
ENABLE_BATCH_GENERATION=true
ENABLE_REFERRAL_SYSTEM=true
ENABLE_DAILY_BONUS=true
ENABLE_PROMO_CODES=true
ENABLE_ANALYTICS=true
